---
import Layout from '../layouts/Layout.astro';
import ColorApp from '../components/ColorApp/index.jsx';
---

<Layout title="Create color families with Chameleon">
	<header>
		<h1>Welcome to Chameleon</h1>
	</header>
	<ColorApp client:load/>
</Layout>

<style>
	header {
		text-align: center;
		padding: 8px 15px;
		flex-grow: 0;
		flex-shrink: 0;
	}

	h1 {
		font-size: 2.5rem;
		font-weight: 300;
		display: inline-block;
		padding: 0;
		margin: 0;
		font-family: "Noto Serif", serif;
		background: linear-gradient(to right, red, orange, yellow, green, blue, indigo, violet);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
</style>